<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Settings"
        android:textColor="#373D3F"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/visualBtn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#9A9CFC"
            android:textColor="#373D3F"
            android:text="Visual Appearance" />

        <Button
            android:id="@+id/profileBtn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#9A9CFC"
            android:textColor="#373D3F"
            android:text="Profile settings" />

        <Button
            android:id="@+id/sensorBtn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#9A9CFC"
            android:textColor="#373D3F"
            android:text="Sensor Settings" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="310dp"
        android:background="#373D3F">

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/home" />

        <ImageButton
            android:id="@+id/alertBtn"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/alert" />

        <ImageButton
            android:id="@+id/settingsBtn"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/settingsselected" />
    </FrameLayout>
</LinearLayout>