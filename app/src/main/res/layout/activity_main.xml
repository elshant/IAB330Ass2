<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Home"
        android:textSize="50sp"
        android:textColor="#474BFF"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/timeOfDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time of Day">
        </TextView>
        <TextView
            android:id="@+id/weatherCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather condition"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">
        <ImageView
            android:layout_width="13dp"
            android:layout_height="30dp"
            android:background="@drawable/tempdark">
        </ImageView>
        <TextView
            android:id="@+id/temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temp">
        </TextView>
        <ImageView
            android:layout_width="23dp"
            android:layout_height="30dp"
            android:background="@drawable/humiditydark"/>
        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"/>
    </LinearLayout>

    <TextView
        android:id="@+id/detailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See more..."
        android:textStyle="bold"
        android:textColor="#474BFF"
        android:clickable="true"
        android:layout_marginLeft="20dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="480dp"
        android:background="#373D3F">

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/homeselected" />

        <ImageButton
            android:id="@+id/alertBtn"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/alert" />

        <ImageButton
            android:id="@+id/settingsBtn"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/settings" />
    </FrameLayout>

</LinearLayout>