<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Visuals"
        android:textSize="50sp"
        android:textColor="#474BFF"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        >
        <Switch
            android:id="@+id/darkModeEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Dark mode"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>
        <Switch
            android:id="@+id/dynamicWallpaperEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Dynamic Home Wallpaper"
            android:textSize="20sp"/>
        <Switch
            android:id="@+id/humidityDisplayEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Display Humidity at Home screen"
            android:textSize="20sp"/>

        <Switch
            android:id="@+id/temperatureDisplayEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Display temperature at home screen"
            android:textSize="20sp"/>

        <Switch
            android:id="@+id/airPressureDisplayEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Display air pressure at home screen"
            android:textSize="20sp"/>

    </LinearLayout>


    <FrameLayout
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#373D3F"
        >

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:background="@drawable/home"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="17dp" />

        <ImageButton
            android:id="@+id/alertBtn"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:background="@drawable/alert"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="17dp" />
        <ImageButton
            android:id="@+id/settingsBtn"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:background="@drawable/settingsselected"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="17dp" />
    </FrameLayout>
</LinearLayout>