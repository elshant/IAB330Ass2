<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/alerts"
        android:textSize="50sp"
        android:textColor="#474BFF"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/warningIcon"
                android:layout_width="37dp"
                android:layout_height="40dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/warning_icon"
                android:contentDescription="Warning Icon" />

            <TextView
                android:id="@+id/EmergencyAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:text="Emergency Alerts:"
                android:textColor="#373D3F"
                android:textSize="28sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/alertTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:text="Alert Title"
                    android:textColor="#373D3F"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/alertTitleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="19:00 PM"
                    android:textColor="#373D3F"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/descIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/desc_icon"
                    android:contentDescription="Description Icon" />

                <TextView
                    android:id="@+id/alertDescText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:text="Low Pressure indicates a possible rainstorm"
                    android:textColor="#373D3F"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/actionIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/action_required"
                    android:contentDescription="Action Icon" />

                <TextView
                    android:id="@+id/alertActionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:text="No action needed."
                    android:textColor="#373D3F"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/noDataIcon1"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/no_data"
            android:contentDescription="No Data Icon"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/noDataText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="143dp"
            android:layout_marginEnd="7dp"
            android:text="No Data"
            android:textColor="#373D3F"
            android:textSize="28sp"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/rainIcon"
                android:layout_width="37dp"
                android:layout_height="40dp"
                android:background="@drawable/rainfall_icon"
                android:contentDescription="Rainfall Icon"
                android:layout_marginEnd="7dp"/>

            <TextView
                android:id="@+id/RainfallAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:text="Rainfall Alerts"
                android:textColor="#373D3F"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/noDataIcon2"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/no_data"
            android:contentDescription="No Data Icon" />

        <TextView
            android:id="@+id/noDataText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="143dp"
            android:layout_marginEnd="7dp"
            android:text="No Data"
            android:textColor="#373D3F"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_alignParentBottom="true"
            android:background="#373D3F">

            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/home"
                android:contentDescription="@string/home_button_alert_activity" />

            <ImageButton
                android:id="@+id/alertBtn"
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/alertselected"
                android:contentDescription="@string/alert_button_alert_activity" />

            <ImageButton
                android:id="@+id/settingsBtn"
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/settings"
                android:contentDescription="@string/settings_button_alert_activity" />
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>